{% set MediaPath = '/media/' ~ category.image %}
<div class="col-6 col-md-4 col-sm-6">
	<div class="thumbnail mb-4 shadow">
		<span>
			<a href="{{ path('destinations-by-category',{'_locale':locale, 'category':category.title|slugify}) }}">
				<img src="{{ MediaPath|imagine_filter('index_thumbnail_destinations') }}" class="img-fluid"/>
			</a>
		</span>
		<div class="caption">
			<h3>{{ category.title }}</h3>
			<div class="row">
				<div class="col-4 col-md-6 col-lg-7 col-xl-4 text-left prix">
					{{'Desde'|trans}}<br><span>{{ category.price|format_currency('EUR', {fraction_digit: 0}) }}</span>
				</div>
				<div class="col-8 col-md-6 col-lg-5 col-xl-8 text-right">
					<a class="btn btn-default me-1" href="{{ path('destinations-by-category',{'_locale':locale, 'category':category.title|slugify}) }}">
						<span class="d-block d-sm-block d-md-block d-lg-none">{{'Ver rutas'|trans}}</span>
						<span class="d-none d-sm-none d-md-none d-lg-block d-xl-none">{{'Ver las rutas'|trans}}</span>
						<span class="d-none d-sm-none d-md-none d-lg-none d-xl-block">
							{{'Ver las rutas en este pa√≠s'|trans}}</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
