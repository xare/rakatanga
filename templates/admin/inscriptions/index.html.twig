{% extends 'admin/base.html.twig' %}

{% block title %}Inscriptions index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'inscriptions'}) }}
        <div class="row">
            <div class="col-12">
                <h1>Inscriptions index</h1>

                <table class="table table-striped table-hover small" data-container="table">
                    <thead class="main-red">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Position</th>
                            <th>Arrhes</th>
                            <th>Solde</th>
                            <th>Assurance</th>
                            <th>Vols</th>
                            <th>Statut</th>
                            <th>Remarque</th>
                            <th>Date_ajout</th>
                            <th>Langue</th>
                            <th>
								<i class="fa fa-plus"></i>
							</th>
                            {# <th>
								<i class="fa fa-eye"></i>
							</th>
                            <th>
								<i class="fa fa-edit"></i>
							</th> #}
							<th>
								<i class="fa fa-trash"></i>
							</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for inscription in inscriptions %}
                    {{include('admin/inscriptions/_row.html.twig')}}
                        
                    {% else %}
                        <tr>
                            <td colspan="15">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
</div>

    <a href="{{ path('inscriptions_new') }}">Create new</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-inscriptions') }}
{% endblock %}
 