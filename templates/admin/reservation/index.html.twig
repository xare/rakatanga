{% extends 'admin/base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
<div class="container" id="js-admin-wrapper">
	{{ include ('admin/shared/_controlband.html.twig',{'entity':'reservation'})}}
    <div class="row">
        <div class="col-md-12 col-12">
            <h1>Indice de reservas</h1>
        </div>
    </div>
    <div class="row mb-4">
        <div class="count col-md-3 col-xs-12">
            <strong>Total de reservas:</strong> 
            <span id="totalItemCount">{{ reservations|length }}</span>
        </div>
         <div class="col-md-1 offset-md-7 col-xs-12">
            {{ include('admin/reservation/_filtrar_resultados.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div class="navigation col-md-2 col-xs-12">
            {{ knp_pagination_render(reservations) }}
        </div>
    </div>
    <div class="row">
        <div class="table-responsive col-12">
            <table class="table table-striped table-hover small">
                 <thead class="main-red">
                    <tr>
                        <th>Id</th>
                        <th>NÃºm. reserva</th>
                        <th>Estatus</th>
                        <th>Pil.</th>
                        <th>Acomp.</th>
                        <th>Cantidad</th>
                        <th>Usuario</th>
                        <th>Viaje</th>
                        <th>Fecha</th>
                        <th>Fecha Reserva</th>
                        <th>Fecha Pago</th>
                        <th>Opciones</th>
                        <th><i class="fas fa-envelope"></i></th>
                        <th><i class="fa fa-trash"></i></th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    {{ include('admin/reservation/_row.html.twig', {'reservation': reservation}) }}
                {% else %}
                    <tr>
                        <td colspan="14">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            <div class="navigation">
            {{ knp_pagination_render(reservations) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-send-message')}}
{% endblock %}
