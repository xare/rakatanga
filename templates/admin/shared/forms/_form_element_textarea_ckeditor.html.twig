<textarea name="{{fieldname}}" id="{{fieldname}}" class="form-control">
</textarea>

<script type="text/javascript">
  var CKEDITOR_BASEPATH = "/build/ckeditor/";
</script>
<script
  type="text/javascript"
  src="{{absolute_url("/build/ckeditor/")}}ckeditor.js">
</script>

<script type="text/javascript">
  if (CKEDITOR.instances['{{fieldname}}']) {
    CKEDITOR.instances['{{fieldname}}'].destroy(true);
    delete CKEDITOR.instances['{{fieldname}}'];
  }
  CKEDITOR.replace("{{fieldname}}", "ckeditor");
</script>