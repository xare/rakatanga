{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="row">
    <div class="col-md-3 col-12">
        {{ form_row(form.name,
            {'label':'Nombre'})
        }}
        {{ form_row(form.Type,
            {
            'label':'Tipo',
            'placeholder':'Selecciona el tipo de categor√≠a',
            'attr':{'class':'form-select'}}) 
        }}
            {{ form_row(form.status,
                {
                'label':'Estatus',
                'placeholder':'Selecciona el estatus',
                'attr':{'class':'form-select'}}) 
            }}
            {{ form_row(form.Continents,
                {
                    'label':'Continente',
                    'attr':{'class':'form-select'}})
            }}
            {# {{ form_row(form.Category) }} #}
        </div>
    <div class="col-md-9 col-sm-12">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist" id="myTab">
                {% for lang in langs %}
                    <li class="nav-item" role="presentation">
                        <button class="nav-link{% if loop.index0 == 0 %} active{% endif %}"
                                id="{{lang.name}}-tab" 
                                data-bs-toggle="tab" 
                                data-bs-target="#{{lang.name}}" 
                                type="button" 
                                role="tab" 
                                aria-controls="#{{lang.name}}"
                                aria-selected="{% if loop.index0 == 0 %}true{% else %}false{% endif %}"
                        >{{lang.name}}</button>
                    </li>
                {% endfor %}
                <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                id="media-tab" 
                                data-bs-toggle="tab" 
                                data-bs-target="#media" 
                                type="button" 
                                role="tab" 
                                aria-controls="#media"
                                aria-selected="false"
                        >
                        Media</button>
                </li>
                <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                id="upload-media-tab" 
                                data-bs-toggle="tab" 
                                data-bs-target="#upload-media" 
                                type="button" 
                                role="tab" 
                                aria-controls="#upload-media"
                                aria-selected="false"
                        >
                        Subir archivo</button>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                {% if form.vars.value.id == null %}
                    {{ include('admin/category/_form_new.html.twig') }} 
                {% else %}
                    {{ include('admin/category/_form_edit.html.twig') }}
                {% endif %} 
            </div>
        </div>
        <br /><br /><br /><br />
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <button class="btn btn-success">
                <i class="fa fa-save"></i>
                {% if form.vars.value.id == null %}
                    {{ button_label|default('Guardar') }}
                {% else %}
                    {{ button_label|default('Actualizar') }}
                {% endif %}
            </button>
        </div>
    {{ form_widget(form._token)}}
    {{ form_end(form,{'render_rest': false}) }}
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">