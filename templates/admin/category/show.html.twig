{% extends 'admin/base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1>Category</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Tipo</th>
                        <td>{{ category.type }}</td>
                    </tr>
                    <tr>
                        <th>Continente</th>
                        <td>{{ category.continents.code }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ category.status }}</td>
                    </tr>
                    <tr>
                        <th>Traducciones</th>
                        <td>
                            {% for categoryTranslation in category.categoryTranslations %}
                                <span class="badge bg-secondary">{{categoryTranslation.lang.isoCode}}</span> 
                                {{ categoryTranslation.title }}<br />
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <div class="col-1">
                            <a href="{{ path('category_index') }}"  class="btn btn-primary">
                                <i class="fa fa-list"></i>
                            </a>
                        </div>
                        <div class="col-1">
                            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                        </div>
                        <div class="col-1">
                            {{ include('admin/category/_delete_form.html.twig') }}
                        </div>
                        <div class="col-9">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
