{% for categoryTranslation in form.categoryTranslations %}
    <div 
        class="tab-pane fade{% if loop.index0 == 0 %} show active{% endif %}" 
        id="{{categoryTranslation.lang.vars.data.name}}" 
        role="tabpanel" 
        aria-labelledby="{{categoryTranslation.lang.vars.data.name}}-tab">
            <h3>{{categoryTranslation.lang.vars.data.name}}</h3>
        
            <div class="form-group">
                <label 
                    for="category_categoryTranslations_{{loop.index0}}_title"
                    class="required">TÃ­tulo</label>
                <input
                    type="text"
                    id="category_categoryTranslations_{{loop.index0}}_title"
                    name="category[categoryTranslations][{{loop.index0}}][title]"
                    {% if category.id != null %}value="{{categoryTranslation.vars.data.title}}"{% endif %}
                    required="required" 
                    class="form-control" />
            </div>
            <div class="form-group">
                <label 
                    for="category_categoryTranslations_{{loop.index0}}_slug"
                    class="required"
                    >Slug</label>
                <input
                    type="text"
                    id="category_categoryTranslations_{{loop.index0}}_slug"
                    name="category[categoryTranslations][{{loop.index0}}][slug]"
                    {% if category.id != null %}value="{{categoryTranslation.vars.data.slug}}"{% endif %}
                    required="required" 
                    class="form-control" />
            </div>
            <div class="form-group">
                <label 
                    for="category_categoryTranslations_{{loop.index0}}_intro"
                    class="required"
                    >Intro</label>
                <textarea
                    id="category_categoryTranslations_{{loop.index0}}_intro"
                    name="category[categoryTranslations][{{loop.index0}}][intro]"
                    class="form-control"
                >{% if category.id != null %}{{categoryTranslation.vars.data.intro}}{% endif %}</textarea>
            </div>

            <input type="hidden" 
                name="category[categoryTranslations][{{loop.index0}}][lang]" 
                {% if category.id != null %}value="{{categoryTranslation.vars.data.lang.id}}"{% endif %}/>
            
        </div>   
    {% endfor %}
    
    <div 
        class="tab-pane fade" 
        id="media" 
        role="tabpanel" 
        aria-labelledby="media-tab">
        <div id="media-selector">
		{{ include('admin/shared/forms/_add_media_modal.html.twig',{
                 'entity':category
             }) }}
	</div>
    </div>
    