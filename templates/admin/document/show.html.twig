{% import 'shared/_filemacros.html.twig' as file %}

{% extends 'admin/base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
<div class="container">
<div class="row">
        <div class="col-md-12 col-sm-12">
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ document.filename }}</td>
            </tr>
            <tr>
                <th>OriginalFilename</th>
                <td>{{ document.originalFilename }}</td>
            </tr>
            <tr>
                <th>MimeType</th>
                <td><span class="fa {{ file.icon(document.mimeType) }}"></span> {{ document.mimeType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_index') }}">back to list</a>

    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>

    {{ include('admin/document/_delete_form.html.twig') }}
    </div></div></div>
{% endblock %}
