{{ form_start(form) }}
    <div class="row">
        <div class="col-4 col-xs-12">
            {{ form_widget(form) }}
            <div class="admin-buttons-container mt-4">
            <button class="btn btn-success">
                <i class="fa fa-save"></i>
                {% if form.vars.value.id == null %}
                    {{ button_label|default('Guardar') }}
                {% else %}
                    {{ button_label|default('Actualizar') }}
                {% endif %}
            </button>
            {% if form.vars.value.id != null %}
                {{ include('admin/document/_delete_form.html.twig') }}
            {% endif %}
    </div>
        </div>
        <div class="col-8 col-xs-12">
            <div class="tab-pane">
                <a href="{{ path("download_document",{
                        'id': document.id}
                    )}}">
                    {% if document.mimetype == 'image/jpeg'
                    or document.mimetype == 'image/jpg'
                    or document.mimetype == 'image/png' %}
                        <img src="{{ path("download_document",{
                                        'id': document.id}
                        )}}" style="width:50px; height:auto" />
                    {% else %}
                        <span class="fa fa-download"></span>
                    {% endif %}
                    <strong>{{document.doctype|trans}}</strong>:
                    {{document.originalFilename}}
                </a>
            </div>
        </div>
    </div>{# {{ form_widget(form._token)}} #}
{{ form_end(form,{'render_rest': false}) }}
