{% import 'shared/_filemacros.html.twig' as file %}
{% extends 'admin/base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'document'}) }}
    <div class="row">
        <div class="col-12">
            <h1>Document index</h1>
            <div class="count">
                <strong>Documentos en total:</strong>
                <span id="totalItemCount"> {{ count }}</span>
            </div>
            <br />
            <div class="navigation">
                {{ knp_pagination_render(documents) }}
            </div>
            <div class="table-data">
                <div>
                    <table class="table table-striped table-hover small">
                    <thead>
                        <tr>
                            <th class="main-red">Id</th>
                            <th class="main-red">Filename</th>
                            <th class="main-red">OriginalFilename</th>
                            <th class="main-red">MimeType</th>
                            <th class="main-red">User</th>
                            <th class="main-red"><i class="fa fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for document in documents %}
                        {{include('admin/document/_row.html.twig')}}
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
