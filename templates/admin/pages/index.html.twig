{% extends 'admin/base.html.twig' %}

{% block title %} {{parent()}} | Páginas Estáticas{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'pages'})}}
    <div class="row">
        <div class="col-md-12 col-12 js-index-container" 
                data-url="{{ path('pages_items') }}">
            <h1>Páginas Estáticas</h1>
            {# total items count #}
            <div class="count">
                <strong>Páginas estáticas en total:</strong>
                <span id="totalItemCount"> {{ pages.getTotalItemCount }}</span>
            </div>
            <br />
            {# display navigation #}
            <div class="navigation">
                {# {{ knp_pagination_render(pages) }} #}
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover small js-items-list">
                    <thead class="main-red">
                        <tr>
                            <th>{{ knp_pagination_sortable(pages, 'Id', 'p.id',{'class':'text-decoration-none link-light'}) }}</th>
                            <th{% if pages.isSorted('p.default_slug') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(pages, 'Default Slug', 'p.default_slug', {'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th{% if pages.isSorted('p.date_created') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(pages, 'Date Created', 'p.date_created', {'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th{% if pages.isSorted('p.date_modified') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(pages, 'Date Modified', 'p.date_modified', {'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th>Traducciones</th>
                            {# <th class="fit text-center"><i class="fa fa-edit"></i></th> #}
                            <th class="fit text-center"><i class="fa fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for page in pages %}
                    {{include('admin/pages/_row.html.twig')}}
                        
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        <div>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(pages) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
