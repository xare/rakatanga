{% extends 'admin/base.html.twig' %}

{% block title %}Dates{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Dates</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ date.id }}</td>
                    </tr>
                    <tr>
                        <th>Viaje</th>
                        <td>{{ date.travel }}</td>
                    </tr>
                    <tr>
                        <th>Debut</th>
                        <td>{{ date.debut ? date.debut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ date.fin ? date.fin|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>prixAccomp</th>
                        <td>{{ date.prixAccomp }}</td>
                    </tr>
                    <tr>
                        <th>PrixAccomp</th>
                        <td>{{ date.prixAccomp }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ date.statut }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('dates_index') }}"class="btn btn-primary">
                            <i class="fa fa-list"></i>
                            Volver a la lista
                        </a>

            <a href="{{ path('dates_edit', {'id': date.id}) }}" class="btn btn-info">
                <i class="fa fa-edit"></i>
                Editar
            </a>

            {{ include('admin/dates/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
