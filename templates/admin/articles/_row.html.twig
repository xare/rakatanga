<tr>
  <td>{{ article.id }}</td>
  <td>{{ article.blog.name }}</td>
  <td><a href="{{ path('articles_edit', {'id': article.id}) }}">{{ article.title }}</a></td>
  <td>{{ article.intro|raw|slice(0,200) ~ '...' }} <br />
        <a 
            href="#" 
            data-action="read-more" 
            data-content="{{ article.intro|raw|escape }}"
            class="btn btn-primary btn-sm">
            Read more
        <a>
  </td>
  <td>{{ article.body|raw|slice(0,200) ~ '...'  }} <br />
        <a 
            href="#" 
            data-action="read-more" 
            data-content="{{ article.body|raw|escape }}"
            class="btn btn-primary btn-sm">
            Read more
        <a>
  </td>
  <td>
    {% if article.mainPhoto %}
            <img 
                title="{{ article.mainPhoto.filename }}" 
                alt="{{ article.mainPhoto.filename }}" 
                src="{{ article.mainPhoto.MediaPath|imagine_filter('squared_thumbnail_small') }}"
            /> 
        {% endif %}
        <div class="clearfix"></div>
    {{ article.media|length }}
  </td>
  <td>{{ article.publishedAt ? article.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
  {# <td>
      <a href="{{ path('articles_show', {'id': article.id}) }}"
      class="btn btn-primary">
        <i class="fa fa-eye"></i>
      </a>
  </td>
  <td>
      <a href="{{ path('articles_edit', {'id': article.id}) }}"
      class="btn btn-info">
        <i class="fa fa-edit"></i>
      </a>
  </td> #}
  <td>
    {{ include('admin/articles/_delete_form.html.twig') }}
  </td>
</tr>