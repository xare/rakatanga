{% extends 'admin/base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'articles'}) }}
    <div class="row mb-4">
        <div class="col-md-12 col-12">
            <h1>Articles index</h1>
        <div class="row">
            <div class="navigation col-md-2 col-xs-12">
                {{ knp_pagination_render(articles) }}
            </div>
        </div>
            <table class="table table-striped table-hover small">
                <thead class="main-red">
                    <tr>
                        <th>Id</th>
                        <th>Blog</th>
                        <th>Title</th>
                        <th>Intro</th>
                        <th>Body</th>
                        <th>Media</th>
                        <th>PublishedAt</th>
                        <th><i class="fa fa-edit"></i></th>
                    </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    {{ include('admin/articles/_row.html.twig',{'article' : article }) }}
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            
        </div>
    </div>
</div>
{% endblock %}
