{% extends 'admin/base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'articles'}) }}
        {{ include ('admin/articles/partials/_filterband.html.twig') }}
    <div class="row mb-4 mt-2">
        <div class="col-12">
            <h1>Articles index</h1>
            <div class="row">
                <div class="navigation col-md-2 col-xs-12">
                    {{ knp_pagination_render(articles) }}
                </div>
            </div>
            <div class="table-data">
                <div>
                    <table class="table table-hover small">
                        <thead>
                            <tr>
                                <th class="main-red">Id</th>
                                <th class="main-red">Blog</th>
                                <th class="main-red">Title</th>
                                <th class="main-red">Intro</th>
                                <th class="main-red">Body</th>
                                <th class="main-red">Media</th>
                                <th class="main-red">PublishedAt</th>
                                <th class="main-red"><i class="fa fa-edit"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for article in articles %}
                            {{ include('admin/articles/_row.html.twig',{'article' : article }) }}
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-4">
                <div class="navigation col-md-2 col-xs-12">
                {{ knp_pagination_render(articles) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
