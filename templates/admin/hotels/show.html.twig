{% extends 'admin/base.html.twig' %}

{% block title %}Hotels{% endblock %}

{% block body %}
<div class="container">
{{ include ('admin/shared/_controlband.html.twig',{'entity':'hotels'}) }}
    <div class="row">
        <div class="col-12">
            <h1>Hotels</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ hotel.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ hotel.Name }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ hotel.city }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ hotel.country }}</td>
                    </tr>
                    <tr>
                        <th>Website</th>
                        <td>{{ hotel.website }}</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ hotel.category }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('hotels_index') }}">back to list</a>

            <a href="{{ path('hotels_edit', {'id': hotel.id}) }}">edit</a>

            {{ include('admin/hotels/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
