{% extends 'admin/base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-12">
        <h1>Contact index</h1>
        {# total items count #}
        <div class="count">
            <strong>Viajes en total:</strong>
            <span id="totalItemCount"> {{ count }}</span>
        </div>
        <br />
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(contacts) }}
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Message</th>
                        {# <th>Property</th> #}
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.firstname }}</td>
                        <td>{{ contact.lastname }}</td>
                        <td>{{ contact.phone }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.message }}</td>
                    <td>
                        <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                        <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('contact_new') }}">Create new</a>
    </div> 
    </div>
    </div>
    </div>
{% endblock %}
