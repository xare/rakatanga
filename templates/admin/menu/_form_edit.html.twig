    
    {% for menuTranslation in form.menuTranslations %}
    
    <div 
        class="tab-pane fade{% if loop.index0 == 0 %} show active{% endif %}" 
        id="{{menuTranslation.lang.vars.data.name}}" 
        role="tabpanel" 
        aria-labelledby="{{menuTranslation.lang.vars.data.name}}-tab">
            <h3>{{menuTranslation.lang.vars.data.name}}</h3>
            <div class="form-group">
                <label 
                    for="menu_menuTranslations_{{loop.index0}}_title"
                    class="required">Título</label>
                    {# {%- if errors|length > 0 -%}
                    <div id="{{ id }}_errors" class="mb-2">
                        <ul>
                            {%- for error in errors -%}
                                <li>{{ error.message }}</li>
                            {%- endfor -%}
                        </ul>
                    </div>
                    {%- endif -%} #}
                <input
                    type="text"
                    id="menu_menuTranslations_{{loop.index0}}_title"
                    name="menu[menuTranslations][{{loop.index0}}][title]"
                    {% if menu.id != null %}value="{{menuTranslation.vars.data.title}}"{% endif %}
                    required="required" 
                    class="form-control" />
            </div>
            <div class="form-group">
                <label 
                    for="menu_menuTranslations_{{loop.index0}}_slug"
                    class="required"
                    >Término clave para la URL</label>
                <input
                    type="text"
                    id="menu_menuTranslations_{{loop.index0}}_slug"
                    name="menu[menuTranslations][{{loop.index0}}][slug]"
                    {% if menu.id != null %}value="{{menuTranslation.vars.data.slug}}"{% endif %}
                    required="required" 
                    class="form-control" />
            </div>
               
            <input type="hidden" 
                name="menu[menuTranslations][{{loop.index0}}][lang]" 
                {% if menu.id != null %}value="{{menuTranslation.vars.data.lang.id}}"{% endif %}/>
               
        </div>
    {% endfor %}