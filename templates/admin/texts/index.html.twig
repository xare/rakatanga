{% extends 'admin/base.html.twig' %}

{% block title %}Texts index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12 js-index-container" 
                data-url="
                {% if pageNumber > 0 %}
                    {{ path('texts_items', { page: pageNumber }) }}
                {% else %}
                    {{ path('texts_items') }}
                {% endif %}
                "
                data-entity="texts">
            <h1>Indice de Textos</h1>
            {# total items count #}
            <div class="count">
                <strong>Total de reservas:</strong> 
                <span id="totalItemCount"></span>
            </div>
            <br />
            {# display navigation #}
            <div class="navigation">
            </div>
            <div class="table-responsive js-entity-index-table">
                <table class="table table-striped table-hover small js-items-list">
                    
                </table>
            </div>
            <a href="{{ path('texts_new') }}" class="btn btn-primary">
                <i class="fa fa-plus-circle"></i>
                Crear nuevo
            </a>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}