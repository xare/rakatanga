{% extends 'admin/base.html.twig' %}

{% block title %}Lang index{% endblock %}

{% block body %}
<div class="container">
{{ include ('admin/shared/_controlband.html.twig',{'entity':'lang'})}}
    <div class="row">
        <div class="col-md-12 col-12">
            <h1>Índice de idiomas</h1>
            <div class="table-responsive">
                <table class="table table-striped table-hover small">
                    <thead class="main-red">
                        <tr>
                            <th class="fit">Id</th>
                            <th>Nómbre</th>
                            <th>Iso_code</th>
                            <th>Charset</th>
                            <th class="fit"><i class="fa fa-edit"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for lang in langs %}
                        <tr>
                            <td>{{ lang.id }}</td>
                            <td>
                                <a href="{{ path('lang_edit', {'id': lang.id}) }}">
                                    {{ lang.name }}
                                </a>
                            </td>
                            <td>{{ lang.isoCode }}</td>
                            <td>{{ lang.charset }}</td>
                            <td>
                                {{ include('admin/lang/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
