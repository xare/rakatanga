{% extends 'base.html.twig' %}

{% block title %}Travellers{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'travellers'})}}
    <div class="row mb-4">
        <div class="col-12 col-md-12 ">
            <h1>Travellers</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ traveller.id }}</td>
                    </tr>
                    <tr>
                        <th>Langue</th>
                        <td>{{ traveller.langue }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ traveller.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ traveller.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ traveller.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>{{ traveller.position }}</td>
                    </tr>
                    <tr>
                        <th>Assurance</th>
                        <td>{{ traveller.assurance }}</td>
                    </tr>
                    <tr>
                        <th>Vols</th>
                        <td>{{ traveller.vols }}</td>
                    </tr>
                    <tr>
                        <th>Date_ajout</th>
                        <td>{{ traveller.dateAjout ? traveller.dateAjout|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ traveller.email }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('travellers_index') }}">back to list</a>

            <a href="{{ path('travellers_edit', {'id': traveller.id}) }}">edit</a>

            {{ include('travellers/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
