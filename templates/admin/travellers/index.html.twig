{% extends 'admin/base.html.twig' %}

{% block title %}Travellers index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'travellers'})}}
    <div class="row mb-4">
        <div class="col-12 col-md-12 ">
            <h1>Travellers index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Langue</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Position</th>
                        <th>Assurance</th>
                        <th>Vols</th>
                        <th>Date_ajout</th>
                        <th>Email</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for traveller in travellers %}
                    {{ include('admin/travellers/_row.html.twig',{'traveller': traveller} )}}
                    
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('travellers_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
