{% extends 'admin/base.html.twig' %}

{% block title %}Travellers index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'travellers'})}}
    <div class="row mb-4">
        <div class="col-12 col-md-12 ">
            <h1>Travellers index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Langue</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Position</th>
                        <th>Assurance</th>
                        <th>Vols</th>
                        <th>Date_ajout</th>
                        <th>Email</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for traveller in travellers %}
                    <tr>
                        <td>{{ traveller.id }}</td>
                        <td>{{ traveller.langue }}</td>
                        <td>{{ traveller.nom }}</td>
                        <td>{{ traveller.prenom }}</td>
                        <td>{{ traveller.telephone }}</td>
                        <td>{{ traveller.position }}</td>
                        <td>{{ traveller.assurance }}</td>
                        <td>{{ traveller.vols }}</td>
                        <td>{{ traveller.dateAjout ? traveller.dateAjout|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ traveller.email }}</td>
                        <td>
                            <a href="{{ path('travellers_show', {'id': traveller.id}) }}">show</a>
                            <a href="{{ path('travellers_edit', {'id': traveller.id}) }}">edit</a>
                            {{ include('admin/travellers/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('travellers_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
