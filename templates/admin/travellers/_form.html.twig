{{ form_start(form) }}
<div class="row">
    <div class="col-4">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-6">
                {{ form_row(form.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.prenom) }}
            </div>
            <div class="col-6">
                {{ form_row(form.telephone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.position) }}
            </div>
            {# <div class="col-6">
                {{ form_row(form.assurance) }}
            </div> #}
        {# </div>
        <div class="row"> #}
            {# <div class="col-6">
                {{ form_row(form.vols) }}
            </div> #}
            <div class="col-6">
                {{ form_row(form.user) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.langue) }}
            </div>
        </div>
    </div>
    <div class="col-8">
        {% if traveller.id != null %}
            {{ include( 'admin/travellers/_tabs_related.html.twig' )}}
        {% endif %}
    </div>
</div>
    <div class="admin-buttons-container mt-4">
        <button class="btn btn-success">
            <i class="fa fa-save"></i>
            {% if form.vars.value.id == null %}
                {{ button_label|default('Guardar') }}
            {% else %}
                {{ button_label|default('Actualizar') }}
            {% endif %}
        </button>
        {{ include('admin/travellers/_delete_form.html.twig') }}
    </div>
        
{{ form_end(form) }}
