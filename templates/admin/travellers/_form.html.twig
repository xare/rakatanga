{{ form_start(form) }}
<div class="row">
    <div class="col-4">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-6">
                {{ form_row(form.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.prenom) }}
            </div>
            <div class="col-6">
                {{ form_row(form.telephone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.position) }}
            </div>
            {# <div class="col-6">
                {{ form_row(form.assurance) }}
            </div> #}
        {# </div>
        <div class="row"> #}
            {# <div class="col-6">
                {{ form_row(form.vols) }}
            </div> #}
            <div class="col-6">
                {{ form_row(form.user) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.langue) }}
            </div>
        </div>
    </div>
    <div class="col-8">
        {% if traveller.id != null %}
            {{ include( 'admin/travellers/_tabs_related.html.twig' )}}
        {% endif %}
    </div>
</div>
    <br /><br />
    <div class="row">
        <div class="col-2">
            <button class="btn btn-success">
                <i class="fa fa-edit"></i>
                {{ button_label|default('Guardar') }}
            </button>
        </div>
        <div class="col-2">
            {{ include('admin/travellers/_delete_form.html.twig') }}
        </div>
    </div>
{{ form_end(form) }}
