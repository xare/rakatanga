{{ form_start(form) }}
    <div class="row">
        <div class="col-3">
            {{ form_widget(form) }}
            <button class="btn btn-success">
                <i class="fa fa-save"></i>
                {% if form.vars.value.id == null %}
                    {{ button_label|default('Guardar') }}
                {% else %}
                    {{ button_label|default('Actualizar') }}
                {% endif %}
            </button>
            {% if form.vars.value.id != null %}
                {{ include('admin/payments/_delete_form.html.twig') }}
            {% endif %}
        </div>
        <div class="col-9">
            {% if payment.id != null %}
                {{ include( 'admin/payments/_tabs_related.html.twig' )}}
            {% endif %}
        </div>
    </div>
{{ form_end(form) }}