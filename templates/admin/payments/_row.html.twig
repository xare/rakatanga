<tr>
    <td data-cell="Id">{{ payment.id }}</td>
    <td data-cell="Pago">
        <a href="{{path('payments_edit', { 'id' : payment.id })}}"
         data-bs-toggle="tooltip"
            title="Haciendo click verás la página de edición de este pago.">
            {{ payment.ammount|format_currency('EUR', {fraction_digit: 0}) }}
            </a>
    </td>
    <td data-cell="Borrar" data-bs-toggle="tooltip" title="{{payment.stripeId}}">{{payment.stripeId[:10]}}...</td>
    <td data-cell="Reserva">
        <a href="{{path('reservation_edit', { 'id' : payment.reservation.id} )}}"
            title="Haz click y podrás abrir la página de edición de esta reserva. {{payment.reservation.date.travel}} -
            {{payment.reservation.date.debut|date('d/m/Y')}} {{payment.reservation.date.fin|date('d/m/Y')}}"
            data-bs-toggle="tooltip">
            {{ payment.reservation.code }}
        </a>

    <td data-cell="Fecha del pago">
        {{ payment.dateAjout ? payment.dateAjout|date('Y-m-d H:i:s') : '' }}
    </td>
    <td data-cell="Email"><a href="{{path('user_edit',{'id': payment.reservation.user.id})}}" data-bs-toggle="tooltip"
            title="Haciendo click verás la página de edición de este usuario.">{{ payment.reservation.user.email }}</a></td>
    <td data-cell="Viaje">
        {{ renderLocalizedCategory(payment.reservation.date.travel.category.id,'es') }} -
        <a href="{{path('travel_edit',{'id': payment.reservation.date.travel.id})}}"
            data-bs-toggle="tooltip"
            title="Haciendo click verás la página de edición de este viaje.">
        {{ renderLocalizedTravel(payment.reservation.date.travel.id,'es') }}
        </a>
    </td>
    <td data-cell="Fecha">
        <a
            href="{{path('dates_edit',{'id':payment.reservation.date.id})}}"
            data-bs-toggle="tooltip"
            title="Haciendo click verás la página de edición de esta fecha."
            >
            {{payment.reservation.date.debut|date('Y/m/d')}} -
            {{payment.reservation.date.fin|date('Y/m/d')}}
        </a>
    </td>
    <td data-cell="Borrar">
        {{ include('admin/payments/_delete_form.html.twig') }}
    </td>
</tr>