{% extends 'admin/base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}
    <div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'payments'})}}
        <div class="row">
            <div class="col-12">
                <h1>Payments</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ payment.id }}</td>
                        </tr>
                        <tr>
                            <th>Ammount</th>
                            <td>{{ payment.ammount }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('payments_index') }}">back to list</a>

                <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>

                {{ include('admin/payments/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
