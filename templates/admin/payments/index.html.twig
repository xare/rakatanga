{% extends 'admin/base.html.twig' %}

{% block title %}Índice de Pagos{% endblock %}

{% block body %}
    <div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'payments'})}}
    <div class="row">
        <div class="col-12">
            <h1>Índice de Pagos</h1>
        </div>
    </div>
    <div class="row">
        <div class="navigation col-md-2 col-xs-12">
            {{ knp_pagination_render(payments) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">   
                <table class="table table-striped table-hover small">
                    <thead class="main-red">
                        <tr>
                            <th>Id</th>
                            <th>Cantidad</th>
                            <th>Stripe Id</th>
                            <th>Reserva</th>
                            <th>Fecha del pago</th>
                            <th>Usuario</th>
                            <th>Viaje</th>
                            <th>Fechas</th>
                        <th><i class="fa fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        {{include('admin/payments/_row.html.twig')}}   
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="navigation col-md-2 col-xs-12">
                {{ knp_pagination_render(payments) }}
            </div>
        </div>
    </div>
{% endblock %}
