{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'user'}) }}
    <div class="row">
        <div class="col-12">
                <h1>User index</h1>
                {# total items count #}
                <div class="count">
                    <strong>Usuarios en total:</strong> 
                    <span id="totalItemCount">{{users|length}}</span>
                </div>
                <br />
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(users) }}
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover small">
                    <thead class="main-red">
                        <tr>
                            <th>{{ knp_pagination_sortable(users, 'Id', 'u.id',{'class':'text-decoration-none link-light'}) }}</th>
                            <th{% if users.isSorted('u.Email') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(users, 'Email', 'u.Email',{'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th>Langue</th>
                            <th{% if users.isSorted('u.prenom') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(users, 'Apellido', 'u.prenom',{'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th{% if users.isSorted('u.nom') %} class="sorted"{% endif %}>
                                {{ knp_pagination_sortable(users, 'Nombre', 'u.nom',{'class':'text-decoration-none link-light'}) }}
                            </th>
                            <th>Telephone</th>
                            {# <th>Position</th>
                            <th>Arrhes</th>
                            <th>Solde</th>
                            <th>Assurance</th>
                            <th>Vols</th>
                            <th>Statut</th>
                            <th>Remarque</th>
                            <th>Travellers</th>
                            <th>Date_ajout</th> #}
                            <th><i class="fa fa-motorcycle"></i></th>
                            {# <th><i class="fa fa-eye"></i></th> #}
                            <th><i class="fa fa-edit"></i></th>
                            <th><i class="fa fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {{ include('admin/user/_row.html.twig',{'user': user} )}}
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(users) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}