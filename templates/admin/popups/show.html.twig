{% extends 'admin/base.html.twig' %}

{% block title %}Popups{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Popups</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ popup.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ popup.title }}</td>
                        </tr>
                        <tr>
                            <th>Date_start</th>
                            <td>{{ popup.dateStart ? popup.dateStart.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('popups_index') }}">back to list</a>

                <a href="{{ path('popups_edit', {'id': popup.id}) }}">edit</a>

                {{ include('admin/popups/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
