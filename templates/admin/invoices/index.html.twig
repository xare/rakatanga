{% extends 'admin/base.html.twig' %}

{% block title %}Invoices index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'invoices'})}}
        <div class="row">
            <div class="col-md-12 col-12" data-url="">
                <h1>Invoices index</h1>
                <div class="table-responsive">
                    <table class="table table-striped table-hover small">
                        <thead class="main-red">
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Nif</th>
                                <th>Dirección</th>
                                <th>Código Postal</th>
                                <th>Ciudad</th>
                                <th>País</th>
                                <th>Nº factura</th>
                                <th>{{'Cantidad'|trans}}</th>
                                {# <th><i class="fa fa-eye"></i></th> #}
                                {# <th><i class="fa fa-edit"></i></th> #}
                                <th><i class="fa fa-trash"></i></th>
                            </tr>
                        </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            {{ include('admin/invoices/_row.html.twig') }}
                            
                        {% else %}
                            <tr>
                                <td colspan="11">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}