{% extends 'admin/base.html.twig' %}

{% block title %}Invoices index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'invoices'})}}
        <div class="row">
            <div class="col-12">
                <h1>Invoices index</h1>
                <div class="table-data">
                    <div>
                        <table class="table table-hover small">
                            <thead>
                                <tr>
                                    <th class="main-red">Id</th>
                                    <th class="main-red">Nº factura</th>
                                    <th class="main-red">Nombre</th>
                                    <th class="main-red">Nif</th>
                                    <th class="main-red">Dirección</th>
                                    <th class="main-red">Código Postal</th>
                                    <th class="main-red">Ciudad</th>
                                    <th class="main-red">País</th>
                                    <th class="main-red">Cantidad</th>
                                    <th class="main-red"><i class="fa fa-download"></i></th>
                                    <th class="main-red"><i class="fa fa-trash"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for invoice in invoices %}
                                    {{ include('admin/invoices/_row.html.twig') }}
                                {% else %}
                                    <tr>
                                        <td colspan="11">No se han encontrado registros</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}