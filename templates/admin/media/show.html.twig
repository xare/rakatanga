{% extends 'admin/base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'media'})}}
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1>Media</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ medium.id }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ medium.type }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ medium.name }}</td>
                    </tr>
                    <tr>
                        <th>Path</th>
                        <td>{{ medium.path }}</td>
                    </tr>
                    <tr>
                        <th>Url</th>
                        <td>{{ medium.url }}</td>
                    </tr>
                    <tr>
                        <th>Filename</th>
                        <td>{{ medium.filename }}</td>
                    </tr>
                </tbody>
            </table>

        <a href="{{ path('media_index') }}">back to list</a>

        <a href="{{ path('media_edit', {'id': medium.id}) }}">edit</a>

        {{ include('admin/media/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
