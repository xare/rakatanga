<form method="post" action="{{ path('continents_delete', {'id': continent.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ continent.code) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
</form>
