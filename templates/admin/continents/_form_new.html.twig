{% for lang in langs %}
    <div 
        class="tab-pane fade{% if loop.index0 == 0 %} show active{% endif %}" 
        id="{{lang.name}}" 
        role="tabpanel" 
        aria-labelledby="{{lang.name}}-tab">
            <h3>{{lang.name}}</h3>
            <div class="form-group">
             <label 
                    for="continents_continentTranslation_{{loop.index0}}_Name"
                    class="required">Name</label>
            <input
                    type="text"
                    id="continents_continentTranslation_{{loop.index0}}_Name"
                    name="continents[continentTranslation][{{loop.index0}}][Name]"
                    required="required" 
                    class="form-control" />
        </div>
         <input type="hidden" 
            name="continents[continentTranslation][{{loop.index0}}][lang]" 
            value="{{lang.id}}"/>
                {# {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }} #}
    </div>
{% endfor %}