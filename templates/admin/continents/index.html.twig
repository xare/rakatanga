{% extends 'admin/base.html.twig' %}

{% block title %}Continents index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'continents'}) }}
    <div class="row">
        <div class="col-12">
            <h1>Continents index</h1>
            <div class="table-data">
                <div>
                    <table class="table table-hover small">
                        <thead>
                            <tr>
                                <th class="main-red">Id</th>
                                <th class="main-red">Code</th>
                                <th class="main-red">Translation</th>
                                <th class="main-red"><i class="fa fa-trash"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for continent in continents %}
                            {{include('admin/continents/_row.html.twig')}}
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
