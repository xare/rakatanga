{% extends 'admin/base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
<div class="container">
    {{ include ('admin/shared/_controlband.html.twig',{'entity':'blog'}) }}
    <div class="row mb-4 mt-2">
        <div class="col-12">
            <h1>Blog index</h1>
            <div class="table-data">
                <div>
                    <table class="table table-hover small">
                    <thead>
                        <tr>
                            <th class="main-red">Id</th>
                            <th class="main-red">Name</th>
                            <th class="main-red">Lang</th>
                            <th class="main-red">Slug</th>
                            <th class="main-red"><i class="fa fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for blog in blogs %}
                        {{ include('admin/blog/_row.html.twig') }}
                    {% else %}
                        <tr>
                            <td colspan="6">No hay elementos guardados.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
