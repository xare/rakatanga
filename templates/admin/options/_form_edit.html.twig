{% for optionTranslation in form.optionsTranslations %}
    <div 
        class="tab-pane fade{% if loop.index0 == 0 %} show active{% endif %}" 
        id="{{optionTranslation.lang.vars.data.name}}" 
        role="tabpanel" 
        aria-labelledby="{{optionTranslation.lang.vars.data.name}}-tab">
            <h3>{{optionTranslation.lang.vars.data.name}}</h3>
        
            <div class="form-group">
                <label 
                    for="options1_optionsTranslations_{{loop.index0}}_title"
                    class="required">Title</label>
                <input
                    type="text"
                    id="options1_optionsTranslations_{{loop.index0}}_title"
                    name="options1[optionsTranslations][{{loop.index0}}][title]"
                    {% if option.id != null %}value="{{optionTranslation.vars.data.title}}"{% endif %}
                    required="required" 
                    class="form-control" />
            </div>
            <div class="form-group">
                <label 
                    for="options1_optionsTranslations_{{loop.index0}}_intro"
                    class="required"
                    >Intro</label>
                    {{ include('admin/shared/forms/_form_langform_element_textarea.html.twig', {
                                    loop_index: loop.index0, 
                                    mainCategory: 'options1',
                                    subCategory: 'optionsTranslations',
                                    entity_property : 'intro',
                                    ckEditor : true,
                                    entity_id: option.id,
                                    entityTranslation_data_property: optionTranslation.vars.data.intro}) }}
            </div>

            <input type="hidden" 
                name="options1[optionsTranslations][{{loop.index0}}][lang]" 
                {% if option.id != null %}value="{{optionTranslation.vars.data.lang.id}}"{% endif %}/>
            
        </div>   
    {% endfor %}