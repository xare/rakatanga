<tr>
    <td data-cell="Id">{{ option.id }}</td>
    <td data-cell="Viaje">
        <strong>{{ renderLocalizedCategory(option.travel.category.id,'es')}}</strong>
        <br />
        {{ renderLocalizedTravel(option.travel.id,'es') }}</td>
    <td data-cell="Precio">{{ option.price }}</td>
    <td data-cell="Traducciones">
        <a href="{{ path('options_edit', {'id': option.id}) }}">
            {% for optionTranslation in option.optionsTranslations %}
                <div>
                    <span class="badge bg-secondary">
                        {{ optionTranslation.lang.isoCode|upper }}
                    </span> {{ optionTranslation.title }}
                </div>
            {% endfor %}
        </a>
    </td>
    <td data-cell="¿Es extensión?">
        {% if option.isExtension == 1 %}
            <i class="fas fa-check"></i>
        {% else %}
            <i class="fa-solid fa-x"></i>
        {% endif %}
    </td>

    <td data-cell="Copiar">
        <a href="{{ path('options_duplicate', {'id': option.id}) }}">
            <i class="fa fa-copy"></i>
        </a>
    </td>
    <td data-cell="Borrar">
        {{ include('admin/options/_delete_form.html.twig') }}
    </td>
</tr>