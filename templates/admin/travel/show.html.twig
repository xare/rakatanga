{% extends 'admin/base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            {{ include ('admin/travel/_controlband.html.twig')}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1>Travel</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ travel.id }}</td>
                    </tr>
            {# <tr>
                <th>Departure_date</th>
                <td>{{ travel.departureDate ? travel.departureDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            {# <tr>
                <th>Country</th>
                <td>{{ travel.country }}</td>
            </tr> #}
                    <tr>
                        <th>Km</th>
