                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ travel.category }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('travel_index') }}" class="btn btn-primary">
                <i class="fa fa-list"></i>
                Volver a la lista
            </a>

            <a href="{{ path('travel_edit', {'id': travel.id}) }}" class="btn btn-info">
                <i class="fa fa-edit"></i>
                Editar
            </a>

            {{ include('admin/travel/_delete_form.html.twig') }}
        </div>
