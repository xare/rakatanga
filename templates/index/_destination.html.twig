{% set MediaPath = '/media/' ~ category.image %}
<div class="col-lg-4 col-md-6 col-12">
	<div class="thumbnail">
		<span>
			<a href="{{ path('destinations-by-category',{ 'locale':app.request.getLocale(), 'category':category.title|slugify }) }}">
				<img class="img-responsive img-fluid" alt="{{ category.title }}" src="{{ MediaPath|imagine_filter('index_thumbnail_medium') }}"/>
			</a>
		</span>
		<div class="caption">

			<h3>{{ category.title }}</h3>
			<div class="row">

				{% if category.title|lower == "argentina"
				or category.title|lower == "argentine"
				or category.title|lower == "tanzanie"
				or category.title|lower == "tanzania" %}
					<div class="col-12 text-left">
						<p>
							<em>{{'Rutas en preparaci√≥n'|trans}}</em>
						</p>
					</div>
				{% else %}
					<div class="col-5 text-left prix">
						{{'Desde'|trans}}<br>
						<span>
							{{ category.price|format_currency('EUR', {fraction_digit: 0}) }}
						</span>
					</div>
					<div class="col-7 text-right">
						<a class="btn btn-default" href="{{ path('destinations-by-category',{ '_locale':app.request.getLocale(), 'category': renderLocalizedCategory(category.id,app.request.getLocale())|slugify }) }}">
							<span class="d-none d-md-none d-lg-none">{{'Ver'|trans}}</span>
							<span class="d-none d-md-none d-lg-block d-xl-none">{{'Ver destino'|trans}}</span>
							<span class="d-sm-block d-md-block d-md-block d-lg-none d-xl-block">{{'Ver este destino'|trans}}</span>
						</a>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
