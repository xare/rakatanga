{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- PANEL DE ENTRADA
{% endblock %}

{% block body %}

	{{ parent() }}
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-xs-12">
				<h1>{{'Página del usuario'|trans}}:
					{{user.prenom}}
					{{user.nom}}</h1>

				<p>{{'Bienvenido'|trans}},
					<strong>{{user.prenom}}
						{{user.nom}}</strong>,
					{{'a tu espacio personal'|trans}}.
					{{'En este lugar podrás ver la lista de fechas posibles'|trans}},
					{{'y también'|trans}}
					<a href="#">{{'cambiar los datos de tu cuenta'|trans}}</a>
					{{'y tus reservas, así como añadir la documentación que falta'|trans}}.
					<div class="row">
						<div class="col-4 col-xs-12">
							<div class="card text-white bg-secondary mb-3">
								<div class="card-header">{{'Tus Reservas'|trans}}</div>
								<div class="card-body">
									<h5 class="card-title">{{'Ver y cambiar tus reservas'|trans}}</h5>
									<p class="card-text">{{'Podrás cambiar los datos de tus reservas'|trans}}.</p>
									<a href="{{ path('frontend_user_reservations',{'_locale':app.request.locale}) }}" class="btn btn-light">{{'Tus Reservas'|trans}}</a>
								</div>
							</div>
						</div>
						<div class="col-4 col-xs-12">
							<div class="card text-white bg-primary mb-3">
								<div class="card-header">{{'Datos Personales'|trans}}</div>
								<div class="card-body">
									<h5 class="card-title">{{'Cambiar tus datos'|trans}}</h5>
									<p class="card-text">{{'Podrás cambiar los datos personales que depositate el dia en el que creaste tu cuenta'|trans}}.</p>
									<a href="{{ path('frontend_user_settings',{'_locale':app.request.locale}) }}" class="btn btn-light">{{'Formulario de datos personales'|trans}}</a>
								</div>
							</div>
						</div>
						{# <div class="col-3 col-xs-12">
							<div class="card text-white bg-success mb-3">
								<div class="card-header">{{'Añadir documentación'|trans}}</div>
								<div class="card-body">
									<h5 class="card-title">{{'Te será posible añadir documentación'|trans}}.</h5>
									<p class="card-text">{{'Para agilizar los trámites te animamos a añadir documentos relacionados con tu viaje que te hemos pedido por email. Si has realizado una reserva en este apartado podrás añadir documentación relacionada con tu viaje'|trans}}.</p>
									<a href="{{ path('frontend_user_documents',{'_locale':app.request.locale}) }}" class="btn btn-light">{{'Formulario de documentos personales'|trans}}</a>
								</div>
							</div>
						</div> #}
						<div class="col-4 col-xs-12">
							<div class="card text-white bg-info mb-3">
								<div class="card-header">{{'Revisar Facturas'|trans}}</div>
								<div class="card-body">
									<h5 class="card-title">{{'Comprueba tus facturas'|trans}}.</h5>
									<p class="card-text">{{'Recupera todas tus facturas'|trans}}.</p>
									<a href="{{ path('frontend_user_invoices',{'_locale':app.request.locale}) }}" class="btn btn-light">{{'Accede a tu lista de facturas'|trans}}</a>
								</div>
							</div>
						</div>
					</div>
				</p>
			</div>
		</div>
	{% endblock %}

	{% block footer %}
		{{ parent() }}
	{% endblock %}
