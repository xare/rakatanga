<h4>{{ 'Factura'|trans({}, null, locale) }}</h4>
<div class="form-check">
    <input
        type="hidden"
        id="invoices_invoice"
        data-invoice-id="{{invoice.id}}"
        name="invoice"
        value="{{invoice.id}}">
        {# <label
            class="form-check-label"
            for="js-invoice-user">
                {{ 'Utilizar los datos del usuario'|trans }}
        </label> #}
</div>
    {{ form_start(formInvoice) }}
    <div class="container">
    <div class="row">
        <div class="col-6 col-xs-12">
            {{ form_row(formInvoice.name,{label:'Nombre'|trans({}, null, locale)}) }}
        </div>
        <div class="col-6 col-xs-12">
            {{ form_row(formInvoice.nif,{label:'NIF'|trans({}, null, locale)}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_row(formInvoice.address,{label:'Dirección'|trans({}, null, locale)}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-4 col-xs-12">
            {{ form_row(formInvoice.city,{label:'Ciudad'|trans({}, null, locale)}) }}
        </div>
        <div class="col-4 col-xs-12">
            {{ form_row(formInvoice.postalcode,{label:'Código postal'|trans({}, null, locale)}) }}
        </div>
        <div class="col-4 col-xs-12">
            {{ form_row(formInvoice.country,{label:'País'|trans({}, null, locale)}) }}
        </div>
    </div>
    </div>
    {{ form_end(formInvoice,{ 'render_rest': false }) }}

