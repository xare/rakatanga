{% extends 'email/emailBase.html.twig' %}
{% block content %}
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>Pago realizado por {{reservation.user.prenom}} {{reservation.user.nom}} [{{reservation.user.email}}]</center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p><strong>Usuario:</strong> {{reservation.user.prenom}} {{reservation.user.nom}}  [<a href="mailto:{{reservation.user.email}}">{{reservation.user.email}}</a>].</p>
        </columns>
    </row>
    <row>
        <columns>
            <p><strong>Teléfono:</strong> {{reservation.user.telephone}}</p>
        </columns>
    </row>
    <row>
        <columns>
            <p><strong>{{'Viaje'|trans}}:</strong> 
            {{ renderLocalizedTravel(reservation.date.travel.id, app.request.getLocale()) }}
            </p>
        </columns>
    </row>
     <row>
        <columns>
            <p><strong>Fecha:</strong> {{reservation.date.debut|date('Y-m-d')}}.</p>
        </columns>
    </row>
     <row>
        <columns>
            <p><strong>Número de pilotos:</strong> {{reservation.nbpilotes}}.</p>
        </columns>
    </row>
    <row>
        <columns>
            <p><strong>Número de Acompañantes:</strong> {{reservation.nbaccomp}}.</p>
        </columns>
    </row>
    <row>
        <columns>
            <p><strong>Opciones:</strong>
                <ul>
                    {% for reservationOption in reservation.reservationOptions %}
                    <li>
                        {{ renderLocalizedOption(
                                reservationOption.options.id,
                                app.request.getLocale())
                        }}
                        </li> 
                    {% endfor %}
                </ul>
            </p>
        </columns>
    </row>
{% endblock %}