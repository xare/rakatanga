{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- {{ 'Contacto'|trans }}
{% endblock %}
{% block header %}
	{{ parent() }}
	{{ include('shared/_navbar.html.twig') }}
{% endblock %}
{% block body %}

	{# {{ message }} #}
	{{ parent() }}
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-12">
				{{ wo_render_breadcrumbs() }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-12">
				<h1>{{ 'Contacto'|trans }}</h1>
				{{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
				<p><em><strong>{{'Todos los campos marcados con el símbolo * son obligatorios'|trans}}.</em></strong></p>
				{{form_row(form.firstname,{ 
																		'label' : 'Nombre'|trans~' *' ,
																		'attr':{'class':'form-control'}
																		 })}}
				{{form_row(form.lastname,{ 'label':'Apellido/s'|trans~' *'  })}}
				{# {{form_row(form.country)}} #}
				{{form_row(form.phone,{
                    'label': 'Teléfono'|trans,
										
										'help': 'Añade tu número de teléfono'|trans,
                    'attr':{ 
											'class':'row',
											'placeholder':'0000000000' 
										}
									})
				}}
				{{ form_row(form.email,{ 
										'label':'Email'|trans~' *' ,
										'attr':{ 'placeholder': 'usuario@dominio.dom'|trans } })
				}}
				{{ form_row(form.travel,{'label':'Viaje'|trans }) }}
				{{ form_row(form.info,{ 'label' : false }) }}
				{{ form_row(form.message,{ 
					'label':'Mensaje'|trans~' *' ,
					'help': 'Este mensaje tiene que tener como mínimo 10 caracteres'|trans }) }}.
				<br/>
				{{ form_row(form.send,{ 'label':'Enviar'|trans }) }}
				{{ form_end(form) }}
			</div>
			<div class="col-md-6 col-12">
				{{ include('contact/_contact-data.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}
	{{ parent() }}
{% endblock %}
