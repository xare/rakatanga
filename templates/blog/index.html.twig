{% extends 'base.html.twig' %}

{% block title %}Rakatanga Tour - Blog{% endblock %}

{% block body %}


<div class="container">
    <div class="row">
        <div class="col-12 col-xs-12">
            {{ wo_render_breadcrumbs() }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h1>{{ 'Rakatanga-Blog'|trans }}</h1>
            {% for article in articles %}
                <div class="card card-default mb-5 shadow">
                    <div class="card-body">
                        <div class="row"> 
                            {{ include('blog/_article.html.twig',{ 'article' : article }) }} 
                        </div>
                    </div>
                </div>
            {% else %}
            <p>{{ 'Todavía no hemos iniciado nuestro blog pero puedes visitar el blog en español en '|trans }}
                <a href="{{path('blog',{_locale:'es'} )}}">Blog</a>
            </p>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="navigation col-md-2 col-xs-12">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
</div>

    
</div>
{% endblock %}
