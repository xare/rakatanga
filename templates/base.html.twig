<!DOCTYPE html>
<html lang="{{app.request.locale}}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="katakrak.net">
        <title>{% block title %}Rakatanga Tour{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {{ include('shared/_navbar.html.twig') }}
        {% endblock %}
        {% block body %}
        {% endblock %}
        
        {% block footer %}
            {{ include('shared/_footer.html.twig') }}
            {{ include('shared/_cookie-notice.html.twig') }}
        {% endblock %}

        {% block javascripts %}
            {# <script src="https://js.stripe.com/v3/"></script> #}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('cookie-notice') }}
        {% endblock %}
    </body>
</html>
